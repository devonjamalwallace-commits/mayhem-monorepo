{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Services and pricing packages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "string"
    },
    "features": {
      "type": "json"
    },
    "popular": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "text"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "site": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::site.site",
      "inversedBy": "services"
    }
  }
}
