{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders and transactions"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "order_number": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "customer_email": {
      "type": "email",
      "required": true
    },
    "customer_name": {
      "type": "string"
    },
    "customer_phone": {
      "type": "string"
    },
    "shipping_address": {
      "type": "json"
    },
    "billing_address": {
      "type": "json"
    },
    "line_items": {
      "type": "json",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true
    },
    "tax": {
      "type": "decimal",
      "default": 0
    },
    "shipping_cost": {
      "type": "decimal",
      "default": 0
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "processing", "completed", "cancelled", "refunded"],
      "default": "pending",
      "required": true
    },
    "payment_status": {
      "type": "enumeration",
      "enum": ["unpaid", "paid", "partially_refunded", "refunded", "failed"],
      "default": "unpaid",
      "required": true
    },
    "fulfillment_status": {
      "type": "enumeration",
      "enum": ["unfulfilled", "partially_fulfilled", "fulfilled", "cancelled"],
      "default": "unfulfilled"
    },
    "stripe_payment_intent_id": {
      "type": "string"
    },
    "stripe_session_id": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "tracking_number": {
      "type": "string"
    },
    "tracking_url": {
      "type": "string"
    },
    "site": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::site.site",
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
