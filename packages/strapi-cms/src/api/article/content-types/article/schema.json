{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Blog articles and content pieces"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "coverImage": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "readTime": {
      "type": "string"
    },
    "tags": {
      "type": "json"
    },
    "keywords": {
      "type": "json"
    },
    "audience": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "faqs": {
      "type": "json"
    },
    "site": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::site.site",
      "inversedBy": "articles"
    }
  }
}
