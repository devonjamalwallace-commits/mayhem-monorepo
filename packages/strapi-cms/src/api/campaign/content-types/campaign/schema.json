{
  "kind": "collectionType",
  "collectionName": "campaigns",
  "info": {
    "singularName": "campaign",
    "pluralName": "campaigns",
    "displayName": "Campaign",
    "description": "Email and SMS marketing campaigns"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["email", "sms", "both"],
      "default": "email",
      "required": true
    },
    "subject": {
      "type": "string"
    },
    "template": {
      "type": "richtext"
    },
    "message": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "scheduled", "sending", "sent", "failed"],
      "default": "draft",
      "required": true
    },
    "recipient_count": {
      "type": "integer",
      "default": 0
    },
    "sent_count": {
      "type": "integer",
      "default": 0
    },
    "failed_count": {
      "type": "integer",
      "default": 0
    },
    "schedule_date": {
      "type": "datetime"
    },
    "sent_at": {
      "type": "datetime"
    },
    "site": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::site.site",
      "required": true
    },
    "results": {
      "type": "json"
    }
  }
}
